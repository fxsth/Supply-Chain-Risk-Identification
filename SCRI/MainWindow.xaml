<Window x:Class="SCRI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SCRI"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:graphxenums="clr-namespace:GraphX.Common.Enums;assembly=GraphX.Standard.Common"  
        xmlns:controls1="http://schemas.panthernet.ru/graphx/"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="600">

    <Window.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                        ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="graphxenums:LayoutAlgorithmTypeEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" MinWidth="170"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=" Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.Column="0" BorderThickness="1"  Margin="2" >
            <controls1:ZoomControl x:Name="gg_zoomctrl">
                <local:GraphAreaExample x:Name="gg_Area"/>
            </controls1:ZoomControl>
        </Border>
        <ScrollViewer Grid.Column="2" Grid.Row="1">
            <StackPanel>
                <Label Content="Graph Layout"/>
                <ComboBox Name="LayoutAlgorithmComboBox"
                    Width="120"
                    ItemsSource="{Binding Source={StaticResource dataFromEnum}}" SelectionChanged="LayoutAlgorithmComboBox_SelectionChanged"/> 
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
